    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="Jauns ieraksts"
                           Margin="0 0 0 10"
                           FontSize="25"/>
                <Grid Margin="0 0 0 7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Skolotājs/a"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="Teacher"
                             Padding="2"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Telpa"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="Room"
                             TextWrapping="Wrap"
                             Padding="2"/>
                </Grid>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Piezīme"
                           Grid.Row="0"/>
                <TextBox Grid.Row="1"
                         x:Name="Note"
                         Margin="0 5"
                         Padding="2"/>
            </Grid>
            <StackPanel Grid.Row="2">
                <Grid Margin="0 15 0 7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Klase"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <!--<TextBox Grid.Column="1"
                             x:Name="ClassNumber"/>
                    <TextBox Grid.Column="2"
                             x:Name="ClassLetter"/>-->
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  x:Name="ClassNumber"
                                  Margin="0 0 5 0"
                                  SelectedItem="{Binding SelectedNumber}"/>
                        <ComboBox Grid.Column="1"
                                  x:Name="ClassLetter"
                                  Margin="5 0 0 0"
                                  SelectedItem="{Binding SelectedLetter}"/>
                    </Grid>
                </Grid>
                <Grid Margin="0 0 0 7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Stunda/as"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <!--
                    <TextBox Grid.Column="1"
                             x:Name="Lessons"/>
                    -->
                    <Grid Grid.Column="1"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="1"
                                  Grid.Column="0"
                                  Command="{Binding Command}"
                                  x:Name="One"
                                  IsChecked="{Binding OneChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="One" Path="Content"/>
                                    <Binding ElementName="One" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="2"
                                  Grid.Column="1"
                                  Command="{Binding Command}"
                                  x:Name="Two"
                                  IsChecked="{Binding TwoChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Two" Path="Content"/>
                                    <Binding ElementName="Two" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="3"
                                  Grid.Column="2"
                                  Command="{Binding Command}"
                                  x:Name="Three"
                                  IsChecked="{Binding ThreeChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Three" Path="Content"/>
                                    <Binding ElementName="Three" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="4"
                                  Grid.Column="3"
                                  Command="{Binding Command}"
                                  x:Name="Four"
                                  IsChecked="{Binding FourChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Four" Path="Content"/>
                                    <Binding ElementName="Four" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="5"
                                  Grid.Column="4"
                                  Command="{Binding Command}"
                                  x:Name="Five"
                                  IsChecked="{Binding FiveChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Five" Path="Content"/>
                                    <Binding ElementName="Five" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="6"
                                  Grid.Column="5"
                                  Command="{Binding Command}"
                                  x:Name="Six"
                                  IsChecked="{Binding SixChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Six" Path="Content"/>
                                    <Binding ElementName="Six" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="7"
                                  Grid.Column="6"
                                  Command="{Binding Command}"
                                  x:Name="Seven"
                                  IsChecked="{Binding SevenChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Seven" Path="Content"/>
                                    <Binding ElementName="Seven" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="8"
                                  Grid.Column="7"
                                  Command="{Binding Command}"
                                  x:Name="Eight"
                                  IsChecked="{Binding EightChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Eight" Path="Content"/>
                                    <Binding ElementName="Eight" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="9"
                                  Grid.Column="8"
                                  Command="{Binding Command}"
                                  x:Name="Nine"
                                  IsChecked="{Binding NineChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Nine" Path="Content"/>
                                    <Binding ElementName="Nine" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="10"
                                  Grid.Column="9"
                                  Command="{Binding Command}"
                                  x:Name="Ten"
                                  IsChecked="{Binding TenChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Ten" Path="Content"/>
                                    <Binding ElementName="Ten" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="11"
                                  Grid.Column="10"
                                  Command="{Binding Command}"
                                  x:Name="Eleven"
                                  IsChecked="{Binding ElevenChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Eleven" Path="Content"/>
                                    <Binding ElementName="Eleven" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                        <CheckBox Content="12"
                                  Grid.Column="11"
                                  Command="{Binding Command}"
                                  x:Name="Twelve"
                                  IsChecked="{Binding TwelveChecked}">
                            <CheckBox.CommandParameter>
                                <MultiBinding Converter="{StaticResource cv}">
                                    <Binding ElementName="Twelve" Path="Content"/>
                                    <Binding ElementName="Twelve" Path="IsChecked"/>
                                </MultiBinding>
                            </CheckBox.CommandParameter>
                        </CheckBox>
                    </Grid>

                </Grid>
                <Grid Margin="0 0 0 7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Lessons"
                             Grid.Column="1"
                             IsEnabled="False"
                             Padding="2"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Datums"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="1"
                                x:Name="Date"
                                Language="lv"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="Notīrīt"
                        x:Name="ResetFields"/>
                <Button Grid.Column="2"
                        Content="Saglabāt"
                        x:Name="AddRecord"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
